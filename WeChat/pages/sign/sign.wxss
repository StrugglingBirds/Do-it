/* pages/sign/sign.wxss */
.userinfo {
  display: flex;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.signInfo {
  padding-top: 40rpx;
  padding-left: 10rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}
.userinfo-nickname {
  color: #666;
}
.signtext {
  margin-top: 10rpx;
  color: #999;
  font-size: 30rpx;
}
.date {
  margin: 0 20rpx;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
}
.curdate {
  color: #666;
  font-size: 30rpx;
}
.curdate ._date {
  margin-left: 10rpx;
  color: #999;
}
.curtime {
  color: #666;
  font-size: 30rpx;
}
.address {
  margin: 0 20rpx;
  border: 1rpx solid #eee;
  display: flex;
}
.address map {
  width: 33.33%;
  height: 150rpx;
}
.address .addrMsg {
  padding: 10rpx 30rpx;
  font-size: 32rpx;
  color: #666;
}
.address .addrMsg view:first-child {
  color: #333;
}
.address .addrMsg view:last-child {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}
.sign {
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 300rpx;
  width: 200rpx;
  height: 200rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 100rpx;
  background: #00bdff;
  box-shadow: 0 0 20rpx 0 #00bdff;
  transition: background 1s;
}
.signHover {
  background: rgba(5,167,224,.9);
}
.sign .btnimg {
  width: 100%;
  height: 50%;
}
.sign .btnimg image {
  width: 50%;
  height: 90%;
}
