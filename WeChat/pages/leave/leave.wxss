/* leave.wxss */
.form {
  width: 100%;
  background: #f5f5f5;
}
.list_item {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.list_item picker {
  width: 100%;
}
.list_item .picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  color: #666;
  font-size: 30rpx;
}
.list_item .picker view {
  display: flex;
  align-items: center;
}
.list_item image.btn_right {
  width: 40rpx;
  height: 40rpx;
}
.text_place {
  font-size: 30rpx;
  color: #999;
}
.reason {
  box-sizing: border-box;
  width: 94%;
  margin: 20rpx auto;
  padding: 10rpx 20rpx;
  border: 1rpx dashed #eee;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #666;
  background: #efefef;
}
.list_item .picker.uploadpic {
  width: 100%;
  border: none !important;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.uploadpic image {
  width: 50rpx;
  height: 50rpx;
}
.pictures {
  background: #fff;
}
.picitem {
  display: flex;
  width: 100%;
  padding: 50rpx 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}
.picitem image {
  width: 100rpx;
  height: 50rpx;
}
.picitem button {
  margin: 0;
}