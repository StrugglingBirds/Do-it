/* leave.wxss */
.form {
  width: 100%;
  background: #f5f5f5;
}
.list_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.list_item button {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: #fff;
  width: 50%;
  height: 100%;
  border: none;
  margin: 0;
}
.list_item picker {
  width: 100%;
}
.list_item .picker {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  color: #666;
  font-size: 30rpx;
}
.list_item .picker view {
  display: flex;
  align-items: center;
}
.list_item image.btn_right {
  width: 40rpx;
  height: 40rpx;
}